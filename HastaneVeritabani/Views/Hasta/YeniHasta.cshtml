
@{
    ViewBag.Title = "YeniHasta";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="center-form-container">
    <form class="form-group form-container" method="post">
        <h2 style="text-align: center; margin-bottom: 20px;">Yeni Hasta Kaydı</h2>
        <div class="form-item">
            <label for="hasta_tcno">TC No</label>
            <input type="text" class="input-dark-theme" name="hasta_tcno" required placeholder="Hasta TC No" />
        </div>
        <div class="form-item">
            <label for="hasta_ad">Adı</label>
            <input type="text" class="input-dark-theme" name="hasta_ad" required placeholder="Hasta Adı" />
        </div>
        <div class="form-item">
            <label for="hasta_soyad">Soyadı</label>
            <input type="text" class="input-dark-theme" name="hasta_soyad" required placeholder="Hasta Soyadı" />
        </div>
        <div class="form-item">
            <label for="hasta_telefon">Telefon No</label>
            <input type="text" class="input-dark-theme" name="hasta_telefon" required placeholder="Hasta Telefon No" />
        </div>
        <div class="form-item">
            <label for="hasta_dogum_tarihi">Doğum Tarihi</label>
            <input type="date" class="input-dark-theme" name="hasta_dogum_tarihi" required />
        </div>
        <div class="form-item">
            <label for="hasta_cinsiyet">Cinsiyeti</label>
            <select name="hasta_cinsiyet" class="select-dark-theme" required>
                <option value="" disabled selected>Hasta Cinsiyeti</option>
                <option value="true">Erkek</option>
                <option value="false">Kadın</option>
            </select>
        </div>
        <div class="form-item">
            <label for="hasta_adres">Adres Bilgileri</label>
        </div>
        <div class="form-item">
            <label for="sehir">Şehir</label>
            <input type="text" class="input-dark-theme" name="sehir" required placeholder="Şehir Bilgisi" />
        </div>

        <div class="form-item">
            <label for="ilce">İlçe</label>
            <input type="text" class="input-dark-theme" name="ilce" required placeholder="İlçe Bilgisi" />
        </div>

        <div class="form-item">
            <label for="mahalle">Mahalle</label>
            <input type="text" class="input-dark-theme" name="mahalle" required placeholder="Mahalle Bilgisi" />
        </div>

        <div class="form-item">
            <label for="sokak">Sokak</label>
            <input type="text" class="input-dark-theme" name="sokak" required placeholder="Sokak Bilgisi" />
        </div>

        <div class="form-item">
            <label for="bina">Bina</label>
            <input type="text" class="input-dark-theme" name="bina" required placeholder="Bina No" />
        </div>

        <div class="form-item">
            <label for="daire">Daire</label>
            <input type="text" class="input-dark-theme" name="daire" required placeholder="Daire No" />
        </div>
        @if (ViewBag.ErrorMessage != null)
        {
            <div style="color: red; text-align: center;">@ViewBag.ErrorMessage</div>
        }
        <div style="text-align: center; margin-top: 20px;">
            <button class="btn btn-primary" onclick="return confirm('Eklemek istediğinize emin misiniz?');">Ekle</button>
        </div>
    </form>
</div>


